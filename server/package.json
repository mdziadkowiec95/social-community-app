{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"ts-node-dev --transpile-only --no-notify --exit-child ./src/server.ts\"",
    "start": "node ./dist/server.js",
    "lint": "eslint ./**/*.ts",
    "format": "eslint ./**/*.ts --fix",
    "generate": "graphql-codegen",
    "generate:watch": "graphql-codegen --watch",
    "prettier-format": "prettier **/*.ts --write",
    "format-and-verify": "npm run prettier-format && npm run lint",
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch=\"**/__tests__/unit/**/*.test.[jt]s?(x)\"",
    "test:integration": "jest --testMatch=\"**/__tests__/integration/**/*.test.[jt]s?(x)\" --collectCoverage=false"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.5.0",
    "@graphql-codegen/typescript-resolvers": "^2.6.5",
    "@graphql-tools/schema": "^8.3.14",
    "@types/gravatar": "^1.8.3",
    "apollo-server": "^3.8.2",
    "apollo-server-core": "^3.9.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.2",
    "graphql": "^16.5.0",
    "graphql-constraint-directive": "^3.1.1",
    "graphql-tools": "^8.2.12",
    "gravatar": "^1.8.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.6",
    "nodemailer": "^6.7.5",
    "radash": "^7.1.0",
    "rimraf": "^3.0.2",
    "winston": "^3.7.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.0.3",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.3",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0-0",
    "typescript": "^4.7.3"
  }
}
